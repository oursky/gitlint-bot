- page = 1
h3 Violated Commits
p
  b Total Count:
  |  #{totalCount}
ul.list-group
  each commit in commits
    li.list-group-item.rounded-0.flex-column.align-items-start
      .d-flex.w-100.justify-content-between
        a.mb-1(href=`/dashboard/commit/${commit.id}`) #{commit.repo_name}@#{commit.id.slice(0, 8)}
        small #{commit.score} score
      p.mb-1.font-italic.text-truncate "#{commit.message.split("\n")[0]}"
      small #{commit.committed_at}
ul.pagination.mt-2.d-flex.flex-wrap
  li.page-item(class=currPage === 1 ? "disabled" : "")
    a.page-link(href=`?page=${currPage - 1}` aria-label='Previous')
      span(aria-hidden='true') &laquo;
  while page <= pageCount
    li.page-item(class=currPage === page ? "active" : "")
      a.page-link(href=`?page=${page}`)=page
    - page++
  li.page-item(class=currPage === pageCount ? "disabled" : "")
    a.page-link(href=`?page=${currPage + 1}` aria-label='Next')
      span(aria-hidden='true') &raquo;

